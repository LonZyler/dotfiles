  client.focused          $base01 $base01    $base07 $base0F
  client.focused_inactive $base02 $base02    $base03 $base0F
  client.unfocused        $base02 $base02    $base03 $base0F
  client.urgent           $base02 $base08    $base00 $base0F

# ====================================
#              Bar config
# ====================================

bar {
        #status_command i3status
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        i3bar_command  i3bar -t
        tray_output primary
        colors {
              separator $base03
              background $base01$alpha
              statusline $base05

#                                border        background       text
              focused_workspace  $base01$alpha $base01$alpha    $base07
              active_workspace   $base01$alpha $base01$alpha    $base03
              inactive_workspace $base01$alpha $base01$alpha    $base03
              urgent_workspace   $base01$alpha $base01$alpha    $base08
        }
}

