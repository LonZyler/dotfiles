# ------------------------------------
#         Monitor management
# ------------------------------------
bindsym $mod+O mode "$mode_monitor"

set $mode_monitor Monitor Setup (1) Single, (2) Dual
mode "$mode_monitor" {
    bindsym 1 exec --no-startup-id ~/.screenlayout/single.sh, mode "default"
    bindsym 2 exec --no-startup-id ~/.screenlayout/dual.sh, mode "default"
    
    bindsym u exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh reboot, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# ------------------------------------
#          Sound management
# ------------------------------------
bindsym KP_Prior exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym KP_Right exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
bindsym KP_Up exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Music playback control
bindsym KP_Begin exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym KP_Next exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym KP_End exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym KP_Insert exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"

# ------------------------------------
#         System management
# ------------------------------------
#Press $mod (super) and X to exit - check toolbar for next choices
bindsym $mod+X mode "$mode_system"

set $mode_system System (k) lock, (l) logout, (u) suspend, (h) hibernate, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym k exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh lock, mode "default"
    bindsym l exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh logout, mode "default"
    bindsym u exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh reboot, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/i3-scripts/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+b bar mode toggle

